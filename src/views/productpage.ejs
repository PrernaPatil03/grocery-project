    function preventBack() {
       window.history.forward(); 
       } setTimeout("preventBack()", 0); 
       window.onunload = function () { null };
   </script>
  <style>
    body, h1, h2, h3, h4, h5, h6 { font-family: "Raleway", sans-serif; }
    body, html { height: 100%; line-height: 1.8;  background-color:#b7bf96;}
    .w3-bar .w3-button { padding: 16px; }
    .product-container {width:100vw;height:100%; display: flex; flex-wrap: wrap; justify-content: center; }
    .product-card { width: 300px; margin: 20px; padding: 20px; background-color: #fff; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
    .product-image { width: 100%; height: 200px; object-fit: cover; border-radius: 10px; }
    .product-name { margin-top: 10px; font-weight: bold; }
    .product-price { margin-top: 5px; color: #007bff; font-size: 20px; }
    .product-description { margin-top: 5px; }
  </style>
</head>
<body>
  <div>
    <% include adminheader.html %>
  </div>

  <div>
    <h2 style="color:white; text-align: center; font-family: Arial, Helvetica, sans-serif;margin-top:4vh;">Display Product Details</h2>
  </div>
  <div class="product-container">
    <% productdata.forEach(function(product){ %>
      <div class="product-card">
        <img class="product-image" src="/images/<%= product.image_url %>" alt="<%= product.name %>">
        <div class="product-name"><%= product.name %></div>
        <div class="product-price">$<%= product.price %>/<%= product.product_unit %></div>
        <div class="product-description"><%= product.description %></div>
      </div>
    <% }) %>
  </div>
</body>
</html>
