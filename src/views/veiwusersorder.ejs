  <div><h2  style= "color:white;text-align: center;">Display All Order Details</h2></div>
  <br>
  <div >
     <table class = "table table-striped"  border="1" class="scroll">
       <thead class="thead-dark"> <tr>
            <th scope ="col">Order ID</th>
            <th scope ="col">UserName</th>
           <th scope ="col"> Total Price</th>
            <th scope ="col">Ordered On</th>
            <th scope ="col">Status</th>
            <th scope ="col">Details</th>
         </tr>
         </thead>
         <% orderdetails.forEach(function(order){ %>
            <tr>
               <td scope ="row"><%= order.order.order_id %></th>
               <td scope ="row"><%= order.userName %></th>
                <td scope ="row"><%= order.order.total_order_amount %></td>
                <td scope ="row"><%= order.order.createdAt %></td>
                <td scope ="row"><%= order.order.status %></td>
                
              <form action="/admin/viewDetails" method="POST">
                
                <td>
                  <button name="orderId"  style="  width:135px;border:none;background-color: #3a6b35; color:whitesmoke; font-family: Arial, Helvetica, sans-serif;" value=<%= order.order.order_id %>>View Details</button>

                  <input type="hidden" name= "id" value=<%= order.order.id %> >
               </td>
              </form>
            </tr>
            <% } )%>
        
    </table>
 
